// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Good {
  @@map(name: "goods")
  id          Int @id @default(autoincrement()) 
  name        String @unique
  type        String
  category    String
  ingredients Ingredient[]
  sales       Sale[]
  price       Float
}

model Ingredient {
  @@map(name: "ingredients")
  id          Int @id @default(autoincrement()) 
  name        String @unique
  allergen    Boolean
  vegan       Boolean
  vegetarian  Boolean
  goods       Good? @relation(fields: [good_id], references: [id])
  good_id     Int?
}

model Staff {
  id          Int @default(autoincrement()) @id
  firstName   String
  lastName    String
  role        String
  duties      Duty[]    
}

model Duty {
  id          Int @id @default(autoincrement()) 
  task        String  @unique
  staff       Staff[]
}

model Supplier {
  id          Int @id @default(autoincrement())
  name        String @unique
  contact     String
  email       String
  phone_num   String
  address     String   
}

model Sale {
  id          Int @id @default(autoincrement()) 
  date        DateTime @default(now())
  item        Good? @relation(fields: [item_id], references: [id])
  item_id     Int?
}



