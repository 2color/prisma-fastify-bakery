model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model BakedGoods {
  id      Int @default(autoincrement()) @id
  name    String @unique
  type    String
  category String
  ingridients Ingridient[]
  price Int
}

model Ingridient {
  id      Int @default(autoincrement()) @id
  name    String @unique
  allergen  Boolean
  vegan     Boolean
  vegetarian  Boolean
  foodstuff    BakedGoods  @relation(fields: [test], references: [id])
  test Int @unique
}

model Stuff {
  id      Int @default(autoincrement()) @id
  firstName   String
  lastName    String
  role        String
  duties      Duties[]    
}

model Duties {
  id      Int @default(autoincrement()) @id
  task    String
  stuff   Stuff @relation(fields: [id], references: [id])
}

model Supplier {
  id      Int @default(autoincrement()) @id
}

model Sales {
  id      Int @default(autoincrement()) @id
  date    DateTime
}



