// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Goods {
  @@map(name: "goods")
  id          Int @id @default(autoincrement()) 
  name        String @unique
  type        String
  category    String
  ingridients Ingridient[]
  sales       Sales[]
  price       Float
}

model Ingridient {
  @@map(name: "ingridients")
  id          Int @id @default(autoincrement()) 
  name        String @unique
  allergen    Boolean
  vegan       Boolean
  vegetarian  Boolean
  goods       Goods?  @relation(fields: [goods_id], references: [id])
  goods_id    Int?
}

model Stuff {
  id          Int @default(autoincrement()) @id
  firstName   String
  lastName    String
  role        String
  duties      Duty[]    
}

model Duty {
  id          Int @id @default(autoincrement()) 
  task        String  @unique
  stuff       Stuff[]
}

model Supplier {
  id          Int @id @default(autoincrement())
  name        String @unique
  contact     String
  email       String
  phone_num   String
  address     String   
}

model Sales {
  id          Int @id @default(autoincrement()) 
  date        DateTime @default(now())
  item        Goods? @relation(fields: [item_id], references: [id])
  item_id     Int?
}



